client.placeholder      $blue-gray	$darknightblue	$orange		$teal		$dark-gray
client.background       $darknightblue


bar {
  swaybar_command waybar
  workspace_buttons yes
  pango_markup enabled
  font pango: M+ 2m medium, Hack Nerd Font 10
}


