# GENERAL
set $mod Mod4
font pango: 'Noto Sans Condensed','Font Awesome 5 Brands Regular' ,'Hack Nerd Font Mono' Bold  10 
default_border none
gaps inner 6
gaps outer 0

# Setting menu etc
set $term alacritty
set $menu wofi -S run 
set $dmenu wofi -S drun 

# Set Wallpapers
set $wpaperh wallpaper-h.jpg
set $wpaperv wallpaper-v.jpg

# Setting monitors
set $monMainScrn 'eDP-1'
#set $monMainScrn 'Sharp Corporation 0x1476'
set $monDell2415 'Dell Inc. DELL U2415 PVJVW554203L' 
set $monCaptCard 'Unknown MACROSILICON 0x00000701'
set $monDell2721 'Dell Inc. DELL S2721QS 6T1QM43'
set $monHPL1950  'Hewlett Packard HP L1950 CNK81516DT'
set $monASUSext  'ASUSTek COMPUTER INC ASUS MB16AC R6LMTF239744'
#set $monASUSext  'DP-1'

output $monMainScrn {
  scale 2
  pos 640 1440
  res 3840x2160
  bg $wpaperh stretch
  }

output $monCaptCard {
  pos 0 0 
  res 1920x1080@30Hz
  bg $wpaperh stretch
  }

output $monDell2721 {
  scale 1.5
  pos 0 0
  res 3840x2160@60Hz
  bg $wpaperh stretch
}

output $monDell2415 {
  pos 2560 0 
  res 1920x1200@59.950Hz
  transform 270 
  bg $wpaperv stretch
  }

output $monHPL1950 {
  pos 3840 1080 
  res 1280x1024 
  bg $wpaperh stretch
  }

output $monASUSext {
  pos 2560 1440
  res 1920x1080
  bg $wpaperh stretch
  }

set $wacomScreen eDP-1
#set $wacomScreen $monDell2721

input 1386:888:Wacom_Intuos_BT_M_Pen map_to_output $wacomScreen
input 1386:888:Wacom_Intuos_BT_M_Pad map_to_output $wacomScreen
input 1386:889:Wacom_Intuos_BT_M_Pen map_to_output $wacomScreen
input 1386:889:Wacom_Intuos_BT_M_Pad map_to_output $wacomScreen
exec echo $wacomScreen > $HOME/.config/sway/scripts/wacomSetOutput.d/currentOutput.out
input 1267:9377:ELAN_Touchscreen map_to_output eDP-1
input 1267:9377:ELAN_Touchscreen scroll_method two_finger
input "type:keyboard" {
   xkb_layout us,tr
   xkb_options grp:shift_caps_toggle
}

# Startup Software
#exec_always systemctl --user import-environment
exec_always dbus-update-activation-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP XDG_RUNTIME_DIR XDG_SESSION_TYPE BEMENU_BACKEND PATH QT_QPA_PLATFORM SSH_ASKPASS SSH_AUTH_SOCK SWAYSOCK WINDOWID WLR_DRM_DEVICES WLR_DRM_NO_ATOMIC WLR_DRM_NO_MODIFIERS WLR_NO_HARDWARE_CURSORS WLR_RENDERER XCURSOR_SIZE X_CURSOR_THEME XDG_SEAT XDG_SESSION_ID 

exec_always --no-startup-id sleep 0.1s && resetDunst
exec_always sleep 0.5s && backlight

# Needed applet buttons
exec --no-startup-id sleep 0.6s && blueman-applet
exec --no-startup-id sleep 0.6s && nm-applet
exec --no-startup-id sleep 10s && solaar -w hide -b solaar

